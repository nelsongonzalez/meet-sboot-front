{
  "rules": {
    "users": {
      "$uid": {
        "events": {
          ".read": "auth != null",
        	".write": "$uid === auth.uid"
        }
      }
    },
    "public": {
      "bets": {
        "$event": {
          ".indexOn": ["prediction"],
          ".read": "auth != null",
          "$uid": {
        	  ".write": "$uid === auth.uid"
          }
        }
      },
      "events": {
        ".read": "auth != null",
        ".write": "auth != null",
      },
      "winners": {
        ".read": "auth != null",
        ".write": "auth != null",
      }
    }
  }
}
